{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "Fullstack ToDo application with Node.js/Express and React",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"PORT=5001 npm run server\" \"npm run client\"",
    "server": "PORT=5001 nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "PORT=5001 node server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}